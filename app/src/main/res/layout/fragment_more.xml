<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/menu_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textAlignment="center"
            android:textSize="40sp"
            android:padding="5dp"
            android:textColor="@color/primaryTextColor"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/settings_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opcje"
            android:drawableLeft="@drawable/settings"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/primaryTextColor"
            />
        <Button
            android:id="@+id/measurements_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pomiary"
            android:drawableLeft="@drawable/pomiary"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/primaryTextColor"/>
        <Button
            android:id="@+id/feedback_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:drawableLeft="@drawable/feedback"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/primaryTextColor"/>
    </LinearLayout>
</FrameLayout>